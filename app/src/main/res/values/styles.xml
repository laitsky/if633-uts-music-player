<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="input_field_et">
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:fontFamily">@font/rubik_light</item>
        <item name="android:includeFontPadding">true</item>
        <item name="android:padding">14dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHighlight">@color/brand_red_2</item>
        <item name="android:textColorHint">@color/input_color_gray</item>
        <item name="android:textColorLink">@color/brand_red</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="rounded_btn">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:paddingStart">45dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingRight">45dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">@null</item>
    </style>
</resources>